                                    .detail-next
                                    .detail-prev

                            .detail__center
                                .detail__img.js-big(style="background-image:url('images/TEMP/1.jpg')" data-fancybox="gallery" href="images/TEMP/1.jpg")
                                    .detail__zoom
                                .detail__repost
                                    .detail__repost-bl
                                        img(src="images/repost.png")
                                    .detail__repost-txt поделиться с друзьями
                            .detail__right
                                .detail__ttl Одноразовая тарелочка для супа
                                .detail__art 347RP10WHSS
                                .detail__price-w
                                    .detail__price
                                        span.price.detail__int 3.
                                        span.price.detail__kop 96
                                        span.rub.detail__rub И
                                        span.sep.detail__sep /
                                        span.st.detail__st шт
                                    form.to-basket
                                        .to-basket__input
                                            input.value.value_m(type="number" min="1" value="10")
                                        .to-basket__btn
                                            button.btn.btn_m.btn_32.btn-red(type="submit" data-fancybox data-src="#basket-mess") В&nbsp;корзину
                                .detail__text
                                    p Суповые тарелки среди широкого ассортимента нашего интернет-магазина посуды, занимают одно из самых высоких мест по востребованности.
                                    table
                                        tr
                                            td(width="145") Артикул:
                                            td SM-400
                                        tr
                                            td Материал:
                                            td сахарный тростник
                                        tr
                                            td Объем:
                                            td 400 мл.
                                        tr
                                            td Размер:
                                            td 160*36 мм.
                                        tr
                                            td Цвета:
                                            td белый
                    //end .detail
                    .basket-mess#basket-mess(style="display: none;")
                        .basket-mess__content
                            .basket-mess__ttl Добавлено в корзину!
                            .basket-mess__body
                                .basket-mess__img(style="background-image:url('images/TEMP/c1.png')")
                                .basket-mess__cnt
                                    .basket-mess__name Одноразовая тарелочка для супа
                                    .basket-mess__count 10 шт.
                        .basket-mess__footer
                            .basket-mess__footer-in
                                button.btn.btn_m.btn_32.btn-white(data-fancybox-close) продолжить покупки
                                button.btn.btn_m.btn_32.btn-red оформить заказ
                    //end #basket-mess
