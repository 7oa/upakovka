                .breadcrumbs__current
                    span Одноразовая тарелочка для супа
            //end .breadcrumbs
        .container-h
            .inner-page
                .detail-page
                    .detail
                        .detail__main
                            .detail__left
                                .detail__gallery-w
                                    .detail__gallery
                                        .swiper-wrapper
                                            .swiper-slide
                                                .detail__gallery-item.js-prev.active(style="background-image:url('images/TEMP/1.jpg')")
